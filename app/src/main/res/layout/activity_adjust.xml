<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flexible_space_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/pot_2" />

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/flexible_space_image_height"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#f7f7f7">

                <TextView
                    android:id="@+id/title_diary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:lineSpacingExtra="8sp"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="26dp"
                    android:text="오늘의 일기"
                    android:textColor="#aba0ff"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/adjust_imgbtn_weather"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/page_1" />

                <ImageButton
                    android:id="@+id/adjust_imgbtn_emotion"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/smile_contents" />
                <LinearLayout
                    android:layout_width="144dp"
                    android:layout_height="36dp"
                    android:id="@+id/show_img"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="16dp"
                    android:visibility="invisible">
                    <ImageButton
                        android:id="@+id/img1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/page_1"
                        android:onClick="onClick"/>
                    <ImageButton
                        android:id="@+id/img2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/cloudy_contents"
                        android:onClick="onClick"/>
                    <ImageButton
                        android:id="@+id/img3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/rainy_contents"
                        android:onClick="onClick"/>
                    <ImageButton
                        android:id="@+id/img4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/snowy_contents"
                        android:onClick="onClick"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="144dp"
                    android:layout_height="36dp"
                    android:id="@+id/show_img2"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="16dp"
                    android:visibility="invisible">
                    <ImageButton
                        android:id="@+id/img5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/smile_contents"
                        android:onClick="onClick"/>
                    <ImageButton
                        android:id="@+id/img6"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/notbad_contents"
                        android:onClick="onClick"/>
                    <ImageButton
                        android:id="@+id/img7"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/sad_contents"
                        android:onClick="onClick"/>
                    <ImageButton
                        android:id="@+id/img8"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/roundcorner"
                        android:src="@drawable/angry_contents"
                        android:onClick="onClick"/>
                </LinearLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:ems="10"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="13sp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/ex_content"
                android:textColor="#4a4a4a"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f7f7">

                <TextView
                    android:id="@+id/title_pic"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#f7f7f7"
                    android:lineSpacingExtra="8sp"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="26dp"
                    android:text="오늘의 사진"
                    android:textColor="#aba0ff"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/btn_gall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/edit" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:id="@+id/hori_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="false"
                    android:foregroundGravity="left">

                    <LinearLayout
                        android:id="@+id/selected_photos_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:animateLayoutChanges="true"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <!-- images will be added dynamicall to this layout -->
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <Button
                android:id="@+id/adjust_btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#68e5f4"
                android:text="확인"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                app:scale_height="60"
                app:scale_left="0"
                app:scale_top="556"
                app:scale_width="360"
                app:scale_textsize="22"/>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_standard">

        <TextView
            android:id="@+id/adjust_title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1sp"
            android:text="2017. 08. 01 화   오후 9: 25"
            android:textColor="#4a4a4a"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:minHeight="?attr/actionBarSize"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/flexible_space_image_height"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="29dp"
        android:scaleType="center"
        android:src="@drawable/sound_play"
        app:fab_colorNormal="@color/white"
        app:fab_colorPressed="@color/white" />
</FrameLayout>
