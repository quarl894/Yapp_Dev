<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/setting_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:paddingTop="22dp"
        android:text="설정"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/setting_title_underline"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/pager"
        android:background="@drawable/shape_div_gradient" />

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:letterSpacing="-0.06"
        android:text="기본설정"
        android:textColor="#aba0ff"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/setting_layout_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_img_alarm"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="21dp"
            android:src="@drawable/alarm"
            app:srcCompat="@drawable/alarm" />

        <TextView
            android:id="@+id/setting_textview_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="알람설정"
            android:textAlignment="textStart"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_layout_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_img_lock"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="21dp"
            android:src="@drawable/lock"
            app:srcCompat="@drawable/lock" />

        <TextView
            android:id="@+id/setting_textview_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="잠금"
            android:textSize="20sp" />
            android:textSize="14sp"
            android:text="Rec"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_layout_allbackup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_img_allbackup"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="21dp"
            android:src="@drawable/backup_all"
            app:srcCompat="@drawable/backup_all" />

        <TextView
            android:id="@+id/setting_textview_allbackup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="전체백업"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_layout_allclear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_img_allclear"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="21dp"
            android:src="@drawable/delete"
            app:srcCompat="@drawable/delete" />

        <TextView
            android:id="@+id/setting_textview_allclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="전체초기화"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>